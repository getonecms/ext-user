{
    "name": "getonecms/ext-user",
    "description": "OneCMS user extension",
    "type": "onecms-extension",
    "authors": [
        {
            "name": "Mohammed Shifreen",
            "email": "mshifreen@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "yiisoft/yii2": "~2.0",
        "getonecms/ext-base": "*",
        "getonecms/ext-admin": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.12.19"
    },
    "autoload": {
        "psr-4": {
            "OneCMS\\User\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OneCMS\\User\\Test\\": "test/"
        }
    },
    "optimize-autoloader": true,
    "repositories": [
        {
            "type": "path",
            "url": "../ext-base"
        },
        {
            "type": "path",
            "url": "../ext-admin"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}